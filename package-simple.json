{
  "name": "udupi-pos",
  "version": "1.0.0",
  "description": "Restaurant POS Billing Software",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YOUR_USERNAME/udupi-pos-system.git"
  },
  "homepage": "https://github.com/YOUR_USERNAME/udupi-pos-system#readme",
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/udupi-pos-system/issues"
  },
  "keywords": [
    "pos",
    "restaurant",
    "billing",
    "electron",
    "thermal-printing",
    "desktop-app"
  ],
  "author": "NMD",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-portable": "electron-builder --win portable",
    "build-installer": "electron-builder --win nsis",
    "dist": "npm run build-portable && npm run build-installer",
    "package": "electron-packager . \"Udupi POS\" --platform win32 --arch x64 --out dist --ignore node_modules --ignore dist --ignore .git --app-version 1.0.0"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.udupipos.restaurant",
    "productName": "Udupi Restaurant POS",
    "copyright": "Copyright Â© 2025 Udupi Krishnam Veg Restaurant",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "package.json",
      "src/**/*",
      "styles/**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!.git/**/*",
      "!README.md"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "Udupi Krishnam Veg Restaurant",
      "requestedExecutionLevel": "asInvoker"
    },
    "portable": {
      "artifactName": "Udupi-POS-Portable-${version}.${ext}"
    },
    "extraResources": [
      {
        "from": "src/storage/",
        "to": "storage/",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
